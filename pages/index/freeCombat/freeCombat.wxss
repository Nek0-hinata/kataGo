@keyframes turnAround {
    from {transform: rotate3d(0, 1, 0, 0deg);}
    to {transform: rotate3d(0, 1, 0, 360deg);}
}
.Canvas{
    height: 300px;
    width: 300px;
    margin: 5px auto;
}
#Avatar{
    width: 50px;
    height: 50px;
}
.hei{
    position: absolute;
    width: 15px;
    height: 15px;
    border-radius: 10px;
    top: 35px;
    left: -15px;
    z-index: 10;
    animation: turnAround 3s ;
    animation-iteration-count: var(--animation-iteration-count);
}
.bai{
    position: absolute;
    height: 15px;
    width: 15px;
    border-radius: 10px;
    top: 40px;
    left: -3px;
    z-index: 10;
    animation: turnAround 3s ;
    animation-iteration-count: var(--animation-iteration-count);
}